# ------------------------------
# Local defaults for this stack
# ------------------------------

# MinIO (S3-compatible)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# S3 credentials (used by Spark/Trino/Polaris to talk to MinIO)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1

# Bucket that will be auto-created by `setup_bucket`
S3_BUCKET=spark1

# Polaris
POLARIS_REALM=POLARIS
POLARIS_ROOT_CLIENT_ID=root
POLARIS_ROOT_CLIENT_SECRET=s3cr3t
POLARIS_CATALOG_NAME=lakehouse_catalog

# Superset
# NOTE: Change SUPERSET_SECRET_KEY for any shared/production-like deployment.
SUPERSET_SECRET_KEY=this_is_a_very_secret_key
SUPERSET_ADMIN_PASSWORD=admin
SUPERSET_LOAD_EXAMPLES=no
SUPERSET_DB_NAME=superset
SUPERSET_DB_USER=superset
SUPERSET_DB_PASSWORD=superset

# Optional host path mounted into Spark container at `/user_data`
USER_DATA_PATH=./user_data